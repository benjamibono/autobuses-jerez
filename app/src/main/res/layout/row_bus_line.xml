<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check_bus_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:checked="true"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"/>

    <TextView
        android:id="@+id/tv_line_description"
        style="@style/TextBase"
        android:layout_marginTop="5dp"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="2"
        android:textSize="17sp"
        android:layout_below="@+id/check_bus_line"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bus_stop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:paddingBottom="3dp"
        android:src="@mipmap/ic_bus_stop"
        android:background="@drawable/background_pressed_common"
        android:layout_alignParentRight="true"/>

</RelativeLayout>