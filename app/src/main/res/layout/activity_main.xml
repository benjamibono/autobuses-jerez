<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.triskelapps.busjerez.views.BannerMessageView
                android:id="@+id/view_banner_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.triskelapps.busjerez.views.UpdateAppView
                android:id="@+id/view_update_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_banner_message"/>

            <fragment
                android:id="@+id/fragment_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.triskelapps.busjerez.ui.main.address.AddressFragment"
                android:layout_below="@+id/view_update_app"/>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fragment_address"
                android:layout_above="@+id/frame_bottom"
                tools:context=".ui.main.MainActivity" />

            <ProgressBar
                android:id="@+id/progress_map"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:theme="@style/ProgressBarMap"
                android:layout_centerInParent="true" />

            <FrameLayout
                android:id="@+id/frame_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="visible">


            </FrameLayout>
        </RelativeLayout>

        <fragment
            android:id="@+id/fragment_filter_bus_lines"
            android:name="com.triskelapps.busjerez.ui.main.filter.FilterBusLinesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="70dp"
            tools:layout="@layout/fragment_filter_bus_lines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="start"
            android:layout_marginRight="50dp"
            android:background="?android:colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:background="@color/primary_light">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_app" />

                <TextView
                    style="@style/TextBase"
                    android:layout_marginLeft="10dp"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                app:menu="@menu/drawer_menu_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fitsSystemWindows="false"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_app_version"
                style="@style/TextBase"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/primary_light"/>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>